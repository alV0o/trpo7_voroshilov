<Page x:Class="trpo7_voroshilov_pr.Pages.AddPatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="AddPatient"
      Background="White">

    <Grid DockPanel.Dock="Top"
          x:Name="AddPatient">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Добавление пациента"
           Grid.Row="0"
           Grid.Column="0"
           Grid.ColumnSpan="2"
           HorizontalAlignment="Center"/>
        <Label Grid.Row="1"
           Grid.Column="0"
           Content="Введите фамилию:"/>
        <Label Grid.Row="2"
           Grid.Column="0"
           Content="Введите имя:"/>
        <Label Grid.Row="3"
           Grid.Column="0"
           Content="Введите отчество:"/>
        <Label Grid.Row="4"
           Grid.Column="0"
           Content="Введите дату рождения:"/>
        <Label Grid.Row="5"
               Grid.Column="0"
               Content="Введите номер телефона:"/>
        <TextBox Grid.Row="1"
             Grid.Column="1"
             Text="{Binding Name, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="2"
             Grid.Column="1"
             Text="{Binding LastName, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="3"
             Grid.Column="1"
             Text="{Binding MiddleName, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="4"
             Grid.Column="1"
             Text="{Binding Birthday, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 Text="{Binding PhoneNumber, Mode=OneWayToSource}"/>
        <TextBlock Grid.Row="6"
           Grid.Column="0">
        <Run Text="ID пациента:"/>
        <Run Text="{Binding ID}"/>
        </TextBlock>
        <Button Grid.Column="1"
            Grid.Row="6"
            Content="Добавить"
            Click="AddNewPatient"/>
    </Grid>
</Page>
