<Page x:Class="trpo7_voroshilov_pr.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Background="White">
    <DockPanel HorizontalAlignment="Center"
               LastChildFill="False">
        <Grid x:Name="InfoDoctor"
              DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="ФИО:"
           Grid.Row="0"
           Grid.Column="0"/>
            <Label Content="Специальность:"
           Grid.Row="1"
           Grid.Column="0"/>
            <TextBlock Grid.Row="0"
           Grid.Column="1">
            <Run Text="{Binding Name}"/>
            <Run Text="{Binding LastName}"/>
            <Run Text="{Binding MiddleName}"/>
            </TextBlock>
            <Label Grid.Row="1"
           Grid.Column="1"
           Content="{Binding Specialisation}"/>
        </Grid>

        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="350"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Создать пациента"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,10,0"/>
            <Button Content="Начать прием"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="0,0,10,0"/>
            <Button Content="Изменить информацию"
                    Grid.Column="2"
                    Grid.Row="0"/>
            <ListView Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Grid.Row="1"
                      BorderBrush="Black">
                
            </ListView>
        </Grid>
    </DockPanel>
</Page>
