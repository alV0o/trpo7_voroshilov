<Window x:Class="trpo7_voroshilov_pr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trpo7_voroshilov_pr"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   LastChildFill="False">
            <Grid DockPanel.Dock="Top"
                  x:Name="RegisterDoctor">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="150"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Label Content="Введите фамилию:"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Label Content="Введите имя:"
                       Grid.Row="1"
                       Grid.Column="0"/>
                <Label Content="Введите отчество:"
                       Grid.Row="2"
                       Grid.Column="0"/>
                <Label Content="Введите специальность:"
                       Grid.Row="3"
                       Grid.Column="0"/>
                <Label Content="Придумайте пароль:"
                       Grid.Row="4"
                       Grid.Column="0"/>
                <Label Content="Повторите пароль:"
                       Grid.Row="5"
                       Grid.Column="0"/>
                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Margin="5,0,0,0">
                    <Run Text="Ваш ID: "/>
                    <Run Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
                </TextBlock>

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         Text="{Binding Name, Mode=OneWayToSource}"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         Text="{Binding LastName, Mode=OneWayToSource}"/>
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         Text="{Binding MiddleName, Mode=OneWayToSource}"/>
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         Text="{Binding Specialisation, Mode=OneWayToSource}"/>
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         Text="{Binding Password, Mode=OneWayToSource}"/>
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         Margin="5,0,0,5"
                         Text="{Binding RepeatPassword, Mode=OneWayToSource}"/>
                <Button Content="Зарегистрироваться"
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5,0,0,5"
                        Click="RegisterNewDoctor"/>
            </Grid>

            <Grid DockPanel.Dock="Top"
                  Margin="0,30,0,0"
                  x:Name="LoginDoctor">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Введите id:"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Label Content="Введите пароль:"
                       Grid.Row="1"
                       Grid.Column="0"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Text="{Binding ID, Mode=OneWayToSource}"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding Password, Mode=OneWayToSource}"/>
                <Button Grid.ColumnSpan="2"
                        Grid.Row="2"
                        Content="Войти"
                        Click="Login"/>
            </Grid>
            <Grid DockPanel.Dock="Top"
                  Margin="0,10,0,0"
                  x:Name="InfoDoctor">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="ФИО:"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Label Content="Специальность:"
                       Grid.Row="1"
                       Grid.Column="0"/>
                <TextBlock Grid.Row="0"
                       Grid.Column="1">
                    <Run Text="{Binding Name}"/>
                    <Run Text="{Binding LastName}"/>
                    <Run Text="{Binding MiddleName}"/>
                </TextBlock>
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Content="{Binding Specialisation}"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
