<Window x:Class="trpo7_voroshilov_pr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trpo7_voroshilov_pr"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   LastChildFill="False">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="150"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Label Content="Введите фамилию:"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Label Content="Введите имя:"
                       Grid.Row="1"
                       Grid.Column="0"/>
                <Label Content="Введите отчество:"
                       Grid.Row="2"
                       Grid.Column="0"/>
                <Label Content="Введите специальность:"
                       Grid.Row="3"
                       Grid.Column="0"/>
                <Label Content="Придумайте пароль:"
                       Grid.Row="4"
                       Grid.Column="0"/>
                <Label Content="Повторите пароль:"
                       Grid.Row="5"
                       Grid.Column="0"/>
                <Label Content="Ваш id:"
                       Grid.Row="6"
                       Grid.Column="0"/>

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="5,0,0,5"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Margin="5,0,0,5"/>
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Margin="5,0,0,5"/>
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Margin="5,0,0,5"/>
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Margin="5,0,0,5"/>
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         Margin="5,0,0,5"/>
                <Button Content="Зарегистрироваться"
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5,0,0,5"/>
            </Grid>

            <Grid DockPanel.Dock="Top"
                  Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Введите id:"
                       Grid.Row="0"
                       Grid.Column="0"/>
                <Label Content="Введите пароль:"
                       Grid.Row="1"
                       Grid.Column="0"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"/>
                <Button Grid.ColumnSpan="2"
                        Grid.Row="2"
                        Content="Войти"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
